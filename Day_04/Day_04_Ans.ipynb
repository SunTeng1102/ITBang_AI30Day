  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "import random\n",
    "\n",
    "# 產生一個介於1到100之間的隨機數字\n",
    "target_number = random.randint(1, 100)\n",
    "\n",
    "# 初始化猜測次數\n",
    "guess_count = 0\n",
    "\n",
    "print(\"猜一個介於1到100之間的數字。\")\n",
    "\n",
    "while True:\n",
    "    try:\n",
    "        # 讓使用者輸入猜測的數字\n",
    "        guess = int(input(\"你的猜測：\"))\n",
    "        guess_count += 1\n",
    "\n",
    "        # 檢查猜測是否正確\n",
    "        if guess == target_number:\n",
    "            print(f\"恭喜你，你猜對了！答案是 {target_number}，你總共猜了 {guess_count} 次。\")\n",
    "            break\n",
    "        elif guess < target_number:\n",
    "            print(\"太低了，請再試一次。\")\n",
    "        else:\n",
    "            print(\"太高了，請再試一次。\")\n",
    "    except ValueError:\n",
    "        print(\"請輸入有效的整數。\")"
   ]
